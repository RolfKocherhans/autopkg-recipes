<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Creates a PKG from downloaded Fetch dmg</string>
	<key>Identifier</key>
	<string>com.github.rolfkocherhans.pkg.Fetch.test</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>Fetch</string>
	</dict>
	<key>MinimumVersion</key>
	<string>0.5</string>
	<key>ParentRecipe</key>
	<string>com.github.rolfkocherhans.download.Fetch.test</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>dmg_path</key>
				<string>%pathname%</string>
			</dict>
			<key>Processor</key>
			<string>AppDmgVersioner</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pkgdirs</key>
				<dict>
					<key>Applications</key>
					<string>0775</string>
				</dict>
				<key>pkgroot</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%</string>
			</dict>
			<key>Processor</key>
			<string>PkgRootCreator</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>destination_path</key>
				<string>%pkgroot%/Applications/Fetch.app</string>
				<key>source_path</key>
				<string>%pathname%/Fetch.app</string>
			</dict>
			<key>Processor</key>
			<string>Copier</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>file_content</key>
				<string>Variables:
				pkgroot=%pkgroot%
				version=%version%
				pathname=%pathname%
				DOWNLOAD_URL=%DOWNLOAD_URL%
				Name=%NAME%
				match=%match%
				RECIPE_CACHE_DIR=%RECIPE_CACHE_DIR%
				url=%DOWNLOAD_URL%%match%</string>
				<key>file_path</key>
				<string>%RECIPE_CACHE_DIR%/ Pkg Variables.txt</string>
			</dict>
			<key>Processor</key>
			<string>FileCreator</string>
		</dict>
	</array>
</dict>
</plist>
